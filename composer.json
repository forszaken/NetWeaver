{
    "name": "koshagol/netweaver",
    "type": "project",
    "require": {
        "php": "^8.1",
        "psr/http-message": "^2.0",
        "laminas/laminas-diactoros": "^3.3"
    },
    "autoload": {
        "files": [
            "src/DetectLang/detectLang.php",
            "src/NetWeaver/Http/createServerRequestFromGlobals.php",
            "src/NetWeaver/Http/emitResponseToSapi.php"
        ],
        "psr-4": {
            "App\\": "src/App",
            "DetectLang\\": "src/DetectLang/",
            "NetWeaver\\": "src/NetWeaver/",
            "General\\": "src/General/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\App\\": "tests/App",
            "Test\\NetWeaver\\": "tests/NetWeaver"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.48",
        "vimeo/psalm": "^5.4",
        "psalm/plugin-phpunit": "^0.18.4"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm --config=psalm.xml"
    }
}
